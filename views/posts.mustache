<div class="mb-4 h-10">
  <select    
    aria-hidden="true"
    class="hide slim-select"
    hx-post="/partials/posts/search"
    hx-trigger="change"
    hx-target="#post-list"
    id="tags"
    name="tags"
    tabindex="-1"
    multiple
    x-init="window.utils.loadSlimSelect"
  >
    {{#Tags}}
      <option value="{{Name}}">{{Name}}</option>
    {{/Tags}} 
  </select>
  {{! <script>utils.loadSlimSelect()</script> }}
</div>


<div id="post-list">
{{> views/post_list }}
</div>
